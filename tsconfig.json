{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "sourceMap": true,
    "lib": ["es6", "dom", "dom.iterable", "scripthost"]
  },
  "include": ["./*.ts"],
  "exclude": ["node_modules"]
}
